<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Assistant pour ajouter des produits à l'installation -->
    <record id="view_gpl_installation_add_products_wizard" model="ir.ui.view">
        <field name="name">gpl.installation.add.products.form</field>
        <field name="model">gpl.installation.add.products</field>
        <field name="arch" type="xml">
            <form string="Ajouter des produits">
                <sheet>
                    <group>
                        <field name="installation_id" invisible="1"/>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <p class="text-muted">
                            Sélectionnez les produits à ajouter à l'installation. Vous pourrez modifier les quantités directement dans le formulaire d'installation.
                        </p>
                    </group>
                </sheet>
                <footer>
                    <button name="action_add_products" string="Ajouter" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
