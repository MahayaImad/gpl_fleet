              name="RDV du jour"
              parent="gpl_fleet_vehicles"
              action="action_today_appointments"
              sequence="2"/>

    <!-- Menu Opérations -->
    <menuitem id="menu_gpl_operations" name="Opérations" parent="gpl_menu_root" sequence="2"/>

    <!-- Sous-menus des Opérations -->
